<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson4.sample.Controller">
    <stylesheets><URL value="@/Lesson4/css/Styles.css" /> </stylesheets>
    <ScrollPane fx:id="scroll" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="vBox" VBox.vgrow="ALWAYS" />
    </ScrollPane>
    <HBox fx:id="controlPane">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onMouseClicked="#sendMessage" text="Отправить" />
    </HBox>
</VBox>

