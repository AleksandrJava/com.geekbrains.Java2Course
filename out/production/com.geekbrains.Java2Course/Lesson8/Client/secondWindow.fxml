<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson8.Client.SecondControler"
      prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="label" VBox.vgrow="ALWAYS"></Label>
    <TextArea fx:id="textArea" VBox.vgrow="ALWAYS"></TextArea>
    <HBox >
        <TextField fx:id="textField"  onAction="#sendMsg" promptText="Введите текст" HBox.hgrow="ALWAYS" />
        <Button fx:id="btn" text="Send" onAction="#sendMsg"/>
    </HBox>

</VBox>